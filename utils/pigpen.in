;;; pigpen -- Pigpen encoder/decoder

(use-modules (ice-9  getopt-long)
             (ice-9  rdelim)
             (pigpen string)
             (pigpen encoder))

(define (main args)
  (set-port-encoding! (current-output-port) "UTF-8")
  (display (pigpen-string->string (encode (cadr args))))
  (newline))

;;; pigpen ends here

